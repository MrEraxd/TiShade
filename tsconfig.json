{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@svg/*": ["assets/svg/*"],
      "@base/*": ["components/Base/*"],
      "@store/*": ["stores/*"],
      "@graphql/*": ["graphql/*"],
      "@plugins/*": ["plugins/*"],
      "@interfaces/*": ["interfaces/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
